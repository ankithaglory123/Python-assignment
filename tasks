#task1:largest number
n1=float(input("first number:"))
n2=float(input("second number:"))
n3=float(input("third number:"))
def find_Biggest():
if(n1>=n2)and(n1>=n3):
    large=n1
elif (n2>=n1)and(n2>=n3):
    large=n2
else:
    large=n3
print("largest number among three is:",large)
find_Biggest()




