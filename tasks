task6
while True:
    choice = input("Do want to play a game ? Yes/No\n")
    if choice == 'Yes':
        player1=input("Player 1, Enter Your Choice whether rock/paper/scissors:")
        player2 = input("Player 2, Enter Your Choice whether rock/paper/scissors:")
        if player1 == player2:
            print("Its a same")

        elif player1 == 'rock':
            if player2 == 'scissors':
                print("Player 1 wins\n ")
            else:
                print("Player 2 wins\n ")
        elif player1 == 'scissors':
            if player2 == 'paper':
                print("Player1 wins\n ")
            else:
                print("Player 2 wins\n C")
        elif player1 == 'paper':
            if player2 == 'rock':
                print("Player1 wins\n ")
            else:
                print("Player2 wins\n ")
    else:
        print("Run again")
        break







